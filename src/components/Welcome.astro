---
import About from "./About.astro";
import Classes from "./Classes.astro";
import Contact from "./Contact.astro";
import Hero from "./Hero.astro";
import Navbar from "./Navbar.astro";
import NavCards from "./NavCards.astro";
import Parties from "./Parties.astro";
---

<div id="container">
  <Navbar />
  <Hero />
  <div class="content-wide">
    <NavCards />
  </div>
  <div class="content">
    <About />
    <Classes />
    <Parties />
    <Contact />
  </div>
</div>

<style>
  .content {
    margin: 0 auto;
    max-width: 1200px;
    padding: 0 16px;
    border-bottom: 1px solid black;
  }

  .content-wide {
    margin: 0 auto;
    max-width: 1200px;
    padding: 0 16px;
  }
</style>
