---
import NavCard from "./NavCard.astro";
---

<nav class="nav-cards">
  <NavCard title="Kurse & Workshops" href="#kurse" />
  <NavCard title="Parties & Events" href="#parties" />
  <NavCard title="Merchandise" href="https://shop.wcs-wuppertal.de" />
</nav>

<style>
  .nav-cards {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-left: -6px;
    margin-right: -6px;
    margin-top: 36px;
    margin-bottom: 85px;
  }

  @media (max-width: 950px) {
    .nav-cards {
      flex-direction: column;
      margin-left: 0px;
      margin-right: 0px;
      margin-bottom: 36px;
      margin-bottom: 72px;
    }
  }
</style>
