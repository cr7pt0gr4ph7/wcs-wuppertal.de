<div class="hero">
  <div class="hero-content">
    <h1>West Coast Swing</h1>
  </div>
  <div class="hero-fadeout"></div>
</div>

<style>
  /* roboto-condensed-latin-wght-normal */
  @font-face {
    font-family: "Roboto Condensed Variable";
    font-style: normal;
    font-display: fallback;
    font-weight: 100 900;
    src: url(@fontsource-variable/roboto-condensed/files/roboto-condensed-latin-wght-normal.woff2)
      format("woff2-variations");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191,
      U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  .hero {
    background-color: #ececec;
    background-image: url(https://images.unsplash.com/photo-1523301343968-6a6ebf63c672);
    background-size: cover;
    height: 515px;
  }

  .hero-content {
    height: calc(515px - 98px);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-fadeout {
    height: 98px;
    background: linear-gradient(180deg, #00000000, #000000ff);
  }

  h1 {
    font-family: Lobster, sans-serif;
    font-size: 128px;
    color: white;
    margin: 0px;
    text-shadow: 0px 4px 0px rgba(0, 0, 0, 0.25);
    text-shadow: 0px 4px 0px #b1b1b1;
    text-shadow: 0px 4px 0px #413f3f, 0px 0px 10px rgba(0, 0, 0, 0.5);
    text-align: center;
  }
</style>
