---
import { getImage } from "astro:assets";
import { toImageSet } from "../utils/images";

interface Props {
  title: string;
  href: string;
  image: ImageMetadata;
}

const { title, href, image } = Astro.props;

const optimizedImage = await getImage({
  src: image,
  densities: ["1x", "2x"],
  widths: [320, 640],
});

const optimizedImageWide = await getImage({
  src: image,
  widths: [950],
});

optimizedImage.src
---

<a class="nav-card" href={href} style={`--bg-image: ${toImageSet(optimizedImage, ["1x", "2x"])}`}>
  <div class="nav-card-background"></div>
  <div class="nav-card-title"><span>{title}</span></div>
</a>

<style>
  .nav-card {
    color: inherit;
    text-decoration: none;
    display: block;
    width: 320px;
    height: 192px;
    position: relative;
    overflow: hidden;
    border-right: var(--navcard-border);
    border-bottom: var(--navcard-border);
  }

  .nav-card-background {
    background-color: var(--navcard-background);
    background-image: var(--bg-image);
    background-size: cover;
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    transform: scale(1);
    transition: transform 3500ms ease-out;
  }

  .nav-card:hover .nav-card-background {
    transform: scale(1.05);
    transition: transform 350ms ease-out;
  }

  .nav-card-title {
    font-size: 24px;
    font-weight: bold;
    transition: font-size 500ms ease-out;
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    padding: 6px;
    text-wrap: nowrap;
    overflow: hidden;
    color: var(--navcard-text);
  }

  .nav-card-title span {
    position: relative;
    z-index: 1;
  }

  .nav-card:hover .nav-card-title {
    font-size: 32px;
  }

  .nav-card-title::after {
    content: "";
    display: block;
    left: 0px;
    right: 0px;
    bottom: 0px;
    height: 0;
    transition:
      height 500ms ease,
      background-color 500ms ease-out;
    position: absolute;
    background-color: var(--navcard-overlay-hidden);
    z-index: 0;
  }

  .nav-card:hover .nav-card-title::after {
    height: 100%;
    z-index: 0;
    background-color: var(--navcard-overlay-visible);
  }

  @media (max-width: 950px) {
    .nav-card {
      width: auto;
      margin-bottom: 16px;
    }
  }
</style>
