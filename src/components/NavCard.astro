---
const { title, href } = Astro.props;
---

<a class="nav-card" href="{href}">
  <div class="nav-card-title"><span>{title}</span></div>
</a>

<style>
  .nav-card {
    background-color: #a3a3a3;
    color: inherit;
    text-decoration: none;
    display: block;
    width: 286px;
    height: 166px;
    position: relative;
  }

  .nav-card-title {
    font-size: 16px;
    font-weight: bold;
    transition: font-size 500ms ease-out;
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    padding: 6px;
    text-wrap: nowrap;
    overflow: hidden;
  }

  .nav-card-title span {
    position: relative;
    z-index: 1;
  }

  .nav-card:hover .nav-card-title {
    font-size: 32px;
  }

  .nav-card-title::after {
    content: "";
    display: block;
    left: 0px;
    right: 0px;
    bottom: 0px;
    height: 0;
    transition: height 500ms ease-out;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 0;
  }

  .nav-card:hover .nav-card-title::after {
    height: 100%;
    z-index: 0;
  }

  @media (max-width: 950px) {
    .nav-card {
      width: auto;
      margin-bottom: 16px;
    }
  }
</style>
