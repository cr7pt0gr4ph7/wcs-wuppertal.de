---
import MinimalHeader from "../components/MinimalHeader.astro";
import Layout from "./Layout.astro";

interface Props {
  title?: string;
  subtitle?: string;
  isHomepageOrAbout?: boolean;
}
---

<Layout {...Astro.props}>
  {Astro.slots.has("head") && <slot name="head" slot="head" />}
  {Astro.slots.has("seo-tag") && <slot name="seo-tag" slot="seo-tag" />}
  {Astro.slots.has("seo-json-ld") && <slot name="seo-json-ld" slot="seo-json-ld" />}
  <MinimalHeader slot="header" />
  <slot />
</Layout>
